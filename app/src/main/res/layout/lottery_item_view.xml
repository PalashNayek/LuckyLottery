<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_LotterView"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:padding="2dp">

    <!-- Ticket Container -->


        <!-- Ticket ID -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:id="@+id/ticket_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticket_id"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ticket_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/lotteryTicketTxtColor"
                android:textSize="16sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Numbers Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">

            <!-- Placeholder for Lottery Numbers -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/lotteryTxt1"
                android:layout_weight="1"
                android:background="@color/txtColor1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/lotteryTxt2"
                android:layout_weight="1"
                android:background="@color/txtColor2"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/lotteryTxt3"
                android:layout_weight="1"
                android:background="@color/txtColor3"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/lotteryTxt4"
                android:layout_weight="1"
                android:background="@color/txtColor4"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/lotteryTxt5"
                android:layout_weight="1"
                android:background="@color/txtColor5"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


</LinearLayout>
